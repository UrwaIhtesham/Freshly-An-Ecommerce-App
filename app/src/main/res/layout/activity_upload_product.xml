<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UploadProduct.UploadProductActivity"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/freshly_logo"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"/>

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a Product"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="16dp" />

    <!-- Choose Image Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />

    <!-- Placeholder for Image Selection -->
    <ImageView
        android:id="@+id/imagePlaceholder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/imageupload"
        android:layout_marginBottom="24dp" />

    <!-- Product Title Input -->
    <EditText
        android:id="@+id/productTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Product Title"
        android:background="@drawable/search_background"
        android:padding="12dp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Product Description Input -->
    <EditText
        android:id="@+id/productDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Enter Your Product Description"
        android:background="@drawable/search_background"
        android:padding="12dp"
        android:textColor="@color/black"
        android:gravity="top|start"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Product Price Input -->
    <EditText
        android:id="@+id/productPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Product Price"
        android:background="@drawable/search_background"
        android:padding="12dp"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Category Selection Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Category"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="start"/>

    <!-- Category Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

    <!-- Vegetables Button -->
    <Button
        android:id="@+id/categoryVegetablesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:layout_marginEnd="16dp"
        android:padding="15dp"/>

    <!-- Fruits Button -->
        <Button
            android:id="@+id/categoryFruitsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:padding="15dp" />

        <!-- Dry Fruits Button -->
        <Button
            android:id="@+id/categoryDryFruitsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dry Fruits"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:padding="15dp"/>
    </LinearLayout>

    <!-- Upload Button -->
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:backgroundTint="@color/purple"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>


</ScrollView>